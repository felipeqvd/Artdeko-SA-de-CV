<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_saleorder_quotation_document">
    <t t-call="artdeko.comercial_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
        <div class="page">
            <div class="oe_structure"/>
            <h2>
                <span t-if="doc.state in ['draft','sent']">Cotización # </span>                
                <span t-field="doc.name"/>
            </h2>
            <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-xs-3">
                <strong>Quotation Date:</strong>
                <p t-field="doc.date_order" t-options='{"widget": "date"}'/>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id
                             and doc.partner_invoice_id != doc.partner_id
                             or doc.partner_shipping_id != doc.partner_invoice_id">
                        <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and shipping address:</strong>
                        <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing address:</strong>
                        <div t-field="doc.partner_invoice_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <div t-if="doc.partner_shipping_id != doc.partner_invoice_id" class="mt8">
                            <strong>Shipping address:</strong>
                            <div t-field="doc.partner_shipping_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </t>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <div t-field="doc.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="doc.partner_id.vat"/></p>
                </div>
            </div>  

            <div class="row mt32 mb32" id="informations">
                <div t-if="doc.client_order_ref" class="col-xs-3">
                    <strong>Your Reference:</strong>
                    <p t-field="doc.client_order_ref"/>
                </div>                
            </div>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

            <t t-foreach="doc.order_lines_layouted()" t-as="page">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th class="text-center">Code</th>
                            <th>Description</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-center">Imagen</th>
                            <th class="text-right">Unit Price</th>
                            <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>                            
                            <th class="text-right" groups="sale.group_show_price_subtotal">Amount</th>
                            <th class="text-right price_tax_included" groups="sale.group_show_price_total">Total Price</th>
                        </tr>
                   </thead>
                   <tbody class="sale_tbody">
                        <t t-foreach="page" t-as="layout_category">

                            <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                <tr class="active">
                                    <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                        <t t-esc="layout_category['name']"/>
                                    </td>
                                </tr>
                            </t>

                            <!-- Lines associated -->
                            <t t-foreach="layout_category['lines']" t-as="l">
                                <tr>
                                    <td class="text-center">
                                        <span t-field="l.product_id.l10n_mx_edi_code_sat_id.code"/>
                                    </td>
                                    <td><span t-field="l.name"/></td>
                                    <td class="text-right">
                                        <span t-field="l.product_uom_qty"/>
                                        <span t-field="l.product_uom" groups="product.group_uom"/>
                                    </td>
                                    <td align="center">                
                                        <span t-field="l.product_id.image_medium" t-field-options='{"widget": "image"}'/>
                                   </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                        <span t-field="l.discount"/>
                                    </td>                                    
                                    <td class="text-right" groups="sale.group_show_price_subtotal">
                                        <span t-field="l.price_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                    <td class="text-right" groups="sale.group_show_price_total">
                                        <span t-field="l.price_total"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </tr>
                            </t>

                            <t t-if="(layout_category_size > 1 or page_size > 1) and layout_category['subtotal']" groups="sale.group_sale_layout">
                                <tr class="text-right">
                                    <td colspan="6">
                                        <strong>Subtotal: </strong>
                                        <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                        <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                    </td>
                                </tr>
                            </t>

                        </t>
                    </tbody>
                </table>

                <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                    <p style="page-break-before:always;"> </p>
                </t>
            </t>

            <div class="clearfix">
                <div class="row" name="total">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed" style="min-width: 200px;max-width: 350px;">
                            <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                <td>
                                    <strong>Subtotal &#40;<span t-field="doc.pricelist_id.currency_id.name"></span>&#41;</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="doc.amount_untaxed"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                            <t t-foreach="doc._get_tax_amount_by_group()" t-as="amount_by_group">
                                <tr style="border-bottom:1px solid #dddddd;">
                                    <t t-if="amount_by_group[3] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                        <td>
                                            <span t-esc="amount_by_group[0]"/>
                                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/></span>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="amount_by_group[1]"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </t>
                                    <t t-else ="">
                                        <td>
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="amount_by_group[1]"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr class="border-black">
                                <td><strong>Total &#40;<span t-field="doc.pricelist_id.currency_id.name"></span>&#41;</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_total"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <p t-field="doc.note" />
            <p t-if="doc.payment_term_id.note">
                <span t-field="doc.payment_term_id.note"/>
            </p>
            <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
                <strong>Fiscal Position Remark:</strong>
                <span t-field="doc.fiscal_position_id.note"/>
            </p>
            <div class="oe_structure"/>
                        
            
            <p style="page-break-before:always;"> </p>
            <div class="row">
                <div class="col-xs-1">                        
                </div>
                <div class="col-xs-8">
                    <p>CONDICIONES GENERALES DE MENUDEO</p>
                    <p>Vigencia de la cotización: <span t-field="doc.validity_date"/></p>
                    <ul>
                        <li><span>Precios más IVA sin excepción.</span></li>
                        <li><span>Los precios son LAB (libre a bordo) en Cancún.</span></li>
                        <li><span>En caso de cambio o cancelación de cotización, se cobrará un 25% sobre el valor de la misma, siempre y cuando el pedido no haya sido confirmado por el proveedor, en caso contrario, no podrá realizarse ningún cambio ni cancelación.</span></li>
                        <li><span>Cualquier cambio en el proyecto puede variar el precio de la cotización y los tiempos de entrega.</span></li>
                        <li><span>Los precios no incluyen la instalación de equipos, ni trabajos de albañilería, acabados, plomería y electricidad.</span></li>
                        <li><span>Los equipos deben ser instalados por técnicos especializados para hacer válida la garantía.</span></li>
                        <li><span>Una vez pagado el anticipo el tiempo de entrega varía según existencias.</span></li>
                    </ul>
                </div>
                <div class="col-xs-1">                        
                </div>                              
            </div>
            <div class="row">
                <div class="col-xs-1">                        
                </div>
                <div class="col-xs-8">
                    <p>Tipo de moneda de la cotización: <span t-field="doc.pricelist_id.currency_id.currency_unit_label"/> &#40;<span t-field="doc.pricelist_id.currency_id.name"/>&#41;</p>
                    <p>Facturación</p>
                    <ul>
                        <li><span>Indicar si requiere factura.</span></li>
                        <li><span>Proporcionar los datos de facturación máximo 24 horas después de confirmar la compra.</span></li>
                        <li><span>La cotización se factura a una sola razón social.</span></li>
                        <li><span>Pagos en efectivo se facturan a “Público en General”.</span></li>
                        <li><span>La factura se emite en la moneda en la cual se hizo la cotización.</span></li>
                        <li><span>Una vez pagada la factura ya sea parcial o total no podrá cancelarse.</span></li>
                    </ul>
                </div>
                <div class="col-xs-1">                        
                </div>                              
            </div>
            <div class="row">
                <div class="col-xs-1">                        
                </div>
                <div class="col-xs-8">
                    <p>Forma de pago: <span t-field="doc.payment_term_id"/></p>
                    <ul>
                        <li><span>Los pagos pueden hacerse con transferencia bancaria, cheque, depósito en ventanilla o cargo a tarjeta de crédito AMEX.</span></li>
                        <li><span>Las facturas en moneda extranjera (USD o EUR) pueden pagarse en pesos y se aplicará el tipo de cambio a la venta en ventanilla del banco Santander del día de la operación. . Favor confirmar con su asesor.</span></li>
                        <li><span>Pagos con tarjeta de crédito o débito se cobra comisión.</span></li>
                        <li><span>Si por alguna razón el pago con cheque presenta devolución por fondos insuficientes, queda sujeto a lo previsto en el artículo 193 de la Ley General de Títulos y Operaciones de Crédito.</span></li>
                        <li><span>Agradecemos confirmar pagos realizados con copia del comprobante bancario vía correo electrónico, para acreditar el pago.</span></li>                        
                    </ul>
                    <p>Datos bancarios:</p>
                </div>
                <div class="col-xs-1">                        
                </div>                              
            </div>
            <div class="row">
                <div class="col-xs-2">                        
                </div>
                <div class="col-xs-8">
                    <strong t-esc="doc.company_id.name"/><strong> - RFC: </strong><strong t-esc="doc.company_id.vat"/>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th class="text-center">BANCO</th>
                                <th class="text-center">MONEDA</th>
                                <th class="text-center">CUENTA</th>
                                <th class="text-center">CLABE</th>                                
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <tr>
                                <td class="text-center">SANTANDER</td>
                                <td class="text-center">MN</td>
                                <td class="text-center">65504603357</td>
                                <td class="text-center">014691655046033577</td>
                            </tr>
                            <tr>
                                <td class="text-center">SANTANDER</td>
                                <td class="text-center">USD</td>
                                <td class="text-center">82500666324</td>
                                <td class="text-center">014691825006663241</td>
                            </tr>
                            <tr>
                                <td class="text-center">BANCO MONEX SA DE CV Institución de banca múltiple</td>
                                <td class="text-center">EURO</td>
                                <td class="text-center"> - </td>
                                <td class="text-center">112180000010547251</td>
                            </tr>                            
                        </tbody>
                    </table>
                </div>
                <div class="col-xs-2">                        
                </div>                              
            </div>
            <div class="row">
                <div class="col-xs-1">                        
                </div>
                <div class="col-xs-8">
                    <ul>
                        <li><span>Una vez que se confirme la llegada del producto, el cliente dispone de 7 días naturales como máximo de almacenaje sin costo.</span></li>
                        <li><span>Después de 7 días, se cobra el 1% mensual sobre el valor de la factura por concepto de almacenaje, sujeto a disponibilidad de espacio en nuestro almacén. En caso de no haber disponibilidad de espacio la mercancía será enviada a la bodega que el cliente disponga o en su defecto a un almacén de depósito bajo su costo y riesgo.</span></li>
                        <li><span>El producto solo se entregará en el lugar, día y hora que señale el cliente.</span></li>
                        <li><span>Sólo se hará la entrega al responsable que el cliente haya designado previamente.</span></li>
                        <li><span>En caso de que no se realice la entrega por causas imputables al cliente, los costos de almacenaje y reprogramación de la entrega correrán a cargo del cliente.</span></li>
                        <li><span>No se hacen entregas parciales de recubrimientos.</span></li>                        
                    </ul>
                    <strong>Atentamente,</strong>
                    <strong t-field="doc.user_id"/>
                    <strong t-esc="doc.company_id.name"/>
                </div>
                <div class="col-xs-1">                        
                </div>                              
            </div>            
        </div>
    </t>
</template>

<template id="report_saleorder_quotation">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="artdeko.report_saleorder_quotation_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

<template id="report_saleorder_order_document">
    <t t-call="artdeko.comercial_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
        <div class="page">
            <div class="oe_structure"/>
            <h2>
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <span t-if="doc.state not in ['draft','sent']">Order # </span>
                    <span t-if="doc.state in ['draft','sent']">Quotation # </span>
                </t>
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <span>Pro-Forma Invoice # </span>
                </t>
                <span t-field="doc.name"/>
            </h2>
            <div class="row">
                <div class="col-xs-6">
                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id
                             and doc.partner_invoice_id != doc.partner_id
                             or doc.partner_shipping_id != doc.partner_invoice_id">
                        <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and shipping address:</strong>
                        <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing address:</strong>
                        <div t-field="doc.partner_invoice_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <div t-if="doc.partner_shipping_id != doc.partner_invoice_id" class="mt8">
                            <strong>Shipping address:</strong>
                            <div t-field="doc.partner_shipping_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </t>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <div t-field="doc.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="doc.partner_id.vat"/></p>
                </div>
            </div>

            

            <div class="row mt32 mb32" id="informations">
                <div t-if="doc.client_order_ref" class="col-xs-3">
                    <strong>Your Reference:</strong>
                    <p t-field="doc.client_order_ref"/>
                </div>
                <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']" class="col-xs-3">
                    <strong>Date Ordered:</strong>
                    <p t-field="doc.confirmation_date"/>
                </div>
                <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-xs-3">
                    <strong>Quotation Date:</strong>
                    <p t-field="doc.date_order"/>
                </div>
                <div t-if="doc.user_id.name" class="col-xs-3">
                    <strong>Salesperson:</strong>
                    <p t-field="doc.user_id"/>
                </div>
                <div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3">
                    <strong>Payment Terms:</strong>
                    <p t-field="doc.payment_term_id"/>
                </div>
                <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-xs-3">
                    <strong>Expiration Date:</strong>
                    <p t-field="doc.validity_date"/>
                </div>
            </div>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

            <t t-foreach="doc.order_lines_layouted()" t-as="page">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th class="text-center">Code</th>
                            <th>Description</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-center">Imagen</th>
                            <th class="text-right">Unit Price</th>
                            <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>                            
                            <th class="text-right" groups="sale.group_show_price_subtotal">Amount</th>
                            <th class="text-right price_tax_included" groups="sale.group_show_price_total">Total Price</th>
                        </tr>
                   </thead>
                   <tbody class="sale_tbody">
                        <t t-foreach="page" t-as="layout_category">

                            <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                <tr class="active">
                                    <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                        <t t-esc="layout_category['name']"/>
                                    </td>
                                </tr>
                            </t>

                            <!-- Lines associated -->
                            <t t-foreach="layout_category['lines']" t-as="l">
                                <tr>
                                    <td class="text-center">
                                        <span t-field="l.product_id.l10n_mx_edi_code_sat_id.code"/>
                                    </td>
                                    <td><span t-field="l.name"/></td>
                                    <td class="text-right">
                                        <span t-field="l.product_uom_qty"/>
                                        <span t-field="l.product_uom" groups="product.group_uom"/>
                                    </td>
                                    <td align="center">                
                                        <span t-field="l.product_id.image_medium" t-field-options='{"widget": "image"}'/>
                                   </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                        <span t-field="l.discount"/>
                                    </td>                                    
                                    <td class="text-right" groups="sale.group_show_price_subtotal">
                                        <span t-field="l.price_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                    <td class="text-right" groups="sale.group_show_price_total">
                                        <span t-field="l.price_total"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </tr>
                            </t>

                            <t t-if="(layout_category_size > 1 or page_size > 1) and layout_category['subtotal']" groups="sale.group_sale_layout">
                                <tr class="text-right">
                                    <td colspan="6">
                                        <strong>Subtotal: </strong>
                                        <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
