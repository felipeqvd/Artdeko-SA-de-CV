<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="comercial_layout">
        <link rel='stylesheet' href="/artdeko/static/src/less/fonts.less" type="text/less"/>
        <link rel='stylesheet' href="/artdeko/static/src/css/artdeko.css" type="text/css"/>
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header">
            <div class="row" style="vertical-align: text-bottom;">
                <div class="col-xs-6">
                    <img style="vertical-align: text-bottom;" class="img img-responsive" src="/artdeko/static/src/img/logo_texto.png" width="200px"/>                    
                </div>
                <div class="col-xs-5 col-xs-offset-1" name="company_address">                        
                    <div style="vertical-align: text-bottom;" t-if="company.website"><span t-esc="company.website[7:].upper()"/></div>                 
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div>
        
        <div class="footer">
            <div class="row" style="height:170px;">
                <div class="col-xs-2">                        
                </div>
                <div class="col-xs-8">
                    <ul>
                        <li t-if="company.website"><span t-esc="company.website[11:]"/></li>
                        <li t-if="company.website"><span style="color:rgb(209,65,36);">WEB</span></li>
                        <li t-if="company.phone"><span t-field="company.phone"/></li>
                        <li t-if="company.website"><span style="color:rgb(209,65,36);">TELÃ‰FONOS</span></li>
                        <li t-if="company.street_name"><span t-field="company.street_name"/><span t-field="company.street2"/><span t-field="company.street_number2"/></li>
                        <li t-if="company.street_name"><span t-field="company.street_number2"/><span t-field="company.l10n_mx_edi_colony"/><span t-field="company.city"/><span t-field="company.state_id"/><span t-field="company.country_id"/><span t-field="company.zip"/></li>
                        <li t-if="company.website"><span style="color:rgb(209,65,36);">SUCURSAL</span></li>                        
                    </ul>
                </div>
                <div class="col-xs-2">                        
                </div>                              
            </div>            
            <div class="row artdeko_footer" style="background-color:rgb(209,65,36);height:100px;">
                <img src="/artdeko/static/src/img/logo_footer.png" height="100px"/>                
                <span style="padding-left:100px;" t-field="company.report_header"/>                
            </div>
        </div>
    </template>
</odoo>
